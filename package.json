{
  "private": true,
  "name": "knavi",
  "version": "0.0.1",
  "description": "Hit-a-Hint with magic key",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "manifest": "mkdir -pv build && babel-node scripts/jsonize-manifest.js > build/manifest.json",
    "icon": "mkdir -pv build && ( for s in 16 48 128; do convert -verbose src/icon.svg -resize ${s}x build/icon${s}.png & done; wait )",
    "js": "NODE_ENV=production webpack",
    "js-debug": "webpack",
    "flow": "flow src",
    "lint": "eslint src",
    "check": "npm run flow & npm run lint & wait",
    "cp": "mkdir -pv build && cp -v src/*.html src/*.css build",
    "build-debug": "npm run js-debug & npm run icon & npm run manifest & npm run cp & wait",
    "watch": "watch 'npm run build-debug' src",
    "build": "npm run clean && npm run check && ( npm run js & npm run icon & npm run manifest & npm run cp & wait )",
    "clean": "rm -fr build"
  },
  "author": "Keiichiro Ui<keiichiro.ui@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-strip-function-call": "^1.0.2",
    "babel-plugin-transform-flow-strip-types": "^6.21.0",
    "babel-preset-babili": "0.0.9",
    "babel-preset-env": "^1.1.6",
    "babel-register": "^6.18.0",
    "babili-webpack-plugin": "0.0.7",
    "codemirror": "^5.22.2",
    "eslint": "^3.13.0",
    "eslint-config-babel": "^3.0.0",
    "eslint-plugin-babel": "^4.0.0",
    "eslint-plugin-flowtype": "^2.29.2",
    "flow-bin": "^0.37.4",
    "flow-typed": "^2.0.0",
    "key-input-elements": "^1.0.0",
    "mocha": "^3.2.0",
    "storage-form": "^1.0.3",
    "watch": "^1.0.1",
    "webpack": "^1.14.0"
  }
}
